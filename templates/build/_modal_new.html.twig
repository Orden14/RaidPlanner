<div class="modal fade" id="newBuildModal" tabindex="-1" aria-labelledby="newBuildModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newBuildModalLabel">Cr√©er un build</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{ form_start(form, {'action': path('build_new'), 'method': 'POST', 'attr': {'class': 'form-horizontal'}}) }}
                    <div class="row mb-3">
                        <div class="col">
                            {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col">
                            {{ form_label(form.status, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.status) }}
                        </div>
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.specialization, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.specialization) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.categories, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.categories) }}
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            {{ form_label(form.link, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.link, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col">
                            {{ form_label(form.videoLink, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.videoLink, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            {{ form_label(form.benchmark, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.benchmark, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col">
                            {{ form_label(form.benchmarkLink, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.benchmarkLink, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
            </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                        <button type="submit" class="btn btn-primary">Ajouter</button>
                   </div>
                {{ form_end(form) }}
        </div>
    </div>
</div>