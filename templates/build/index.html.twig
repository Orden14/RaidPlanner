{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <h1>Builds</h1>
        <div>
            <a href="#" class="btn btn-primary mt-3 me-2" data-bs-toggle="modal" data-bs-target="#newBuildModal">Créer un build</a>
        </div>
        <div class="table-responsive mt-3">
            <table class="table table-striped table-hover border w-100" data-controller="build--table">
                <caption class="d-none">Table des builds</caption>
                <thead class="thead-dark">
                <tr>
                    <th>Status</th>
                    <th>Icone spé</th>
                    <th>Nom</th>
                    <th>Categories</th>
                </tr>
                </thead>
                <tbody>
                {% for build in builds %}
                    <tr>
                        <td>
                            <span class="{{ get_status_style_class_name(build.status) }} align-middle" title="{{ build.status }}"></span>
                        </td>
                        <td>
                            <img src="{{ asset('/icon/' ~ build.specialization.icon) }}" alt="{{ build.specialization.name }} icon" title="{{ build.specialization.name }}" class="small-icon">
                            <span style="display: none;">{{ build.specialization.name }}</span>
                        </td>
                        <td>{{ build.name }}</td>
                        <td>
                            {% for category in build.categories %}
                                <img src="{{ asset('icon/' ~ category.icon) }}" alt="{{ category.name }} icon" title="{{ category.name }}" class="small-icon">
                                <span style="display: none;">{{ category.name }}</span>
                            {% endfor %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun build trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {{ include('build/_modal_new.html.twig') }}
{% endblock %}
