{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <h1>Builds</h1>
        <div>
            <a href="#" class="btn btn-primary mt-3 me-2" data-bs-toggle="modal" data-bs-target="#newBuildModal">Créer un build</a>
        </div>
        <div class="table-responsive mt-3">
            <table class="table table-striped table-hover border w-100">
                <caption class="d-none">Table des builds</caption>
                <thead class="thead-dark">
                <tr>
                    <th>Icone spé</th>
                    <th>Nom</th>
                    <th>Categories</th>
                    <th>Meta</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for build in builds %}
                    <tr>
                        <td class="text-start"><img src="{{ asset('/icon/' ~ build.specialization.icon) }}" alt="{{ build.name }} icon" title="{{ build.name }}" class="small-icon" /></td>
                        <td class="text-start">{{ build.name }}</td>
                        <td class="text-start">
                            {% for category in build.categories %}
                                <img src="{{ asset('icon/' ~ category.icon) }}" alt="{{ category.name }} icon" title="{{ category.name }}" class="small-icon">
                            {% endfor %}
                        </td>
                        <td class="text-center">{{ build.meta ? 'Oui' : 'Non' }}</td>
                        <td>
                            <div class="d-inline-flex float-end">
                                <a href="{{ path('build_edit', {'id': build.id}) }}" class="btn btn-secondary flex-shrink-0 me-2">
                                    <i class="bi-pencil"></i>
                                </a>
                                <form id="delete{{ build.id }}" method="post" action="{{ path('build_delete', {'id': build.id}) }}" data-controller="confirm">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ build.id) }}">
                                    <a type="button" class="btn btn-danger flex-shrink-0" id="{{ build.id }}" data-action="confirm#confirmDeletion" title="Attention, la suppression est définitive" data-bs-toggle="tooltip">
                                        <i class="bi-trash"></i>
                                    </a>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun build trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {{ include('build/_modal_new.html.twig') }}
{% endblock %}
