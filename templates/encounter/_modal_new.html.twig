<div class="modal fade" id="newEncounterModal" tabindex="-1" aria-labelledby="newEncounterModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newEncounterModalLabel">Ajouter un encounter</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{ form_start(form, {'action': path('encounter_new'), 'method': 'POST', 'attr': {'class': 'form-horizontal'}}) }}
                <div class="form-group mt-2">
                    {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group mt-2">
                    {{ form_label(form.instance, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.instance) }}
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                <button type="submit" class="btn btn-primary">Ajouter</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>