<div class="modal fade" id="changePasswordModal" tabindex="-1" role="dialog" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="changePasswordModalLabel">Changer de mot de passe</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{ form_start(change_password_form) }}
                    <div class="form-group mb-3">
                        {{ form_label(change_password_form.currentPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(change_password_form.currentPassword, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(change_password_form.plainPassword.first, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(change_password_form.plainPassword.first, {'attr': {
                            'class': 'form-control',
                            'data-controller': 'registration--password-requirements',
                        }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(change_password_form.plainPassword.second, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(change_password_form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="modal-footer mt-3">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                        <button type="submit" class="btn btn-primary">Changer</button>
                    </div>
            {{ form_end(change_password_form) }}
            </div>
        </div>
    </div>
</div>
