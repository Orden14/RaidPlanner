<div class="modal fade" id="newTokenModal" tabindex="-1" aria-labelledby="newTokenModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newTokenModalLabel">Générer un token</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{ form_start(form, {'action': path('registration_token_new'), 'method': 'POST', 'attr': {'class': 'form-horizontal'}}) }}
                <div class="mb-3">
                    {{ form_label(form.expiryTime, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.expiryTime, {'attr': {'class': 'form-select'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.uses, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.uses, {'attr': {'class': 'form-select'}}) }}
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                <button type="submit" class="btn btn-primary">Ajouter</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>