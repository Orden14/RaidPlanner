<div class="modal fade" id="newSpecializationModal" tabindex="-1" aria-labelledby="newSpecializationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newSpecializationModalLabel">Ajouter une sp√©cialisation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{ form_start(form, {'action': path('specialization_new'), 'method': 'POST', 'attr': {'class': 'form-horizontal'}}) }}
                    <div class="mb-3">
                        {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.job, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.job, {'attr': {'class': 'form-control' }}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.icon, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.icon, {'attr': {'class': 'form-control'}}) }}
                    </div>
            </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                        <button type="submit" class="btn btn-primary">Ajouter</button>
                   </div>
                {{ form_end(form) }}
        </div>
    </div>
</div>