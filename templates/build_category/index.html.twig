{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <h1>Catégories de builds</h1>
        <div>
            <a href="#" class="btn btn-primary mt-3 me-2" data-bs-toggle="modal" data-bs-target="#newCategoryModal">Ajouter une catégorie</a>
        </div>
        <div class="table-responsive mt-3">
            <table class="table table-striped table-hover border w-100">
                <caption class="d-none">Table des catégories</caption>
                <thead class="thead-dark">
                <tr>
                    <th>Icône</th>
                    <th>Nom</th>
                    <th>Nombre de builds</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for category in build_categories %}
                    <tr>
                        <td><img src="{{ asset('/icon/' ~ category.icon) }}" alt="{{ category.name }} icon" title="{{ category.name }}" class="small-icon"></td>
                        <td>{{ category.name }}</td>
                        <td>{{ category.builds.count }} {{ category.builds.count > 1 ? 'builds' : 'build' }}</td>
                        <td>
                            <div class="d-inline-flex float-end">
                                <a href="{{ path('build_category_edit', {'id': category.id}) }}" class="btn btn-secondary flex-shrink-0 me-2">
                                    <i class="bi-pencil"></i>
                                </a>
                                <form id="delete{{ category.id }}" method="post" action="{{ path('build_category_delete', {'id': category.id}) }}" data-controller="confirm">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                    <a type="button" class="btn btn-danger flex-shrink-0" id="{{ category.id }}" data-action="confirm#confirmDeletion" title="Attention, la suppression est définitive" data-bs-toggle="tooltip">
                                        <i class="bi-trash"></i>
                                    </a>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Il n'y a pas de catégorie</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {{ include('build_category/_modal_new.html.twig') }}
{% endblock %}